@model news.Models.infoNews
@{
    ViewData["Title"] = Model.Title; 
}

<style>
    
    .news-detail-container {
        max-width: 900px;
        margin: 20px auto;
        padding: 20px;
    }

   
    .headline-image {
        width: 100%; 
        height: auto;
        border-radius: 8px;
        margin-bottom: 25px; 
    }

    
    .news-content {
        line-height: 1.6;
        font-size: 1.1em;
        margin-bottom: 40px; 
        white-space: pre-wrap; 
    }

    
    .gallery-section h3 {
        border-bottom: 2px solid #dee2e6;
        padding-bottom: 10px;
        margin-bottom: 20px;
    }

    .image-gallery {
        display: flex;
        overflow-x: auto; 
        gap: 15px; 
        padding-bottom: 15px; 
    }

    .gallery-image {
        height: 150px;
        width: auto;
        border-radius: 5px;
        border: 1px solid #ddd;
        flex-shrink: 0; 
    }

</style>

<div class="news-detail-container">

    <!-- 1. News Title -->
    <h1 class="display-4">@Model.Title</h1>
    <p class="text-muted">Published on @Model.PublishedDate.ToString("MMMM dd, yyyy")</p>
    <hr />

    <!-- 2. Headline Picture -->
    @if (!string.IsNullOrEmpty(Model.ImgTitle))
    {
        <img src="@Model.ImgTitle" class="headline-image" alt="Headline image for @Model.Title">
    }

    <!-- 3. News Content -->
    <div class="news-content">
        @Model.Content
    </div>

    <!-- 4. Image Gallery at the bottom -->
    @if (Model.Images != null && Model.Images.Any())
    {
        <div class="gallery-section">
            <h3>รูปภาพที่เกี่ยวข้อง (Image Gallery)</h3>
            <div class="image-gallery">
                @foreach (var image in Model.Images)
                {
                    <img src="@image.ImagePath" class="gallery-image" alt="News image content">
                }
            </div>
        </div>
    }

</div>